ipaddress = "<%= @address %>"
port = <%= @port %>
conf-root = "<%= @conf_root %>"
use-auth = <%= @use_auth %>
db-pool-size = 5
max-connections = 50
<% if @protocol == "https" -%>
use-ssl = true
ssl-cert = "https-cert.pem"
ssl-key = "https-key.pem"
<% end -%>
local-filestore-dir = "<%= @local_filestore %>"
index-file = "<%= @index_file %>"
use-postgresql = true

[postgresql]
    username = "goiardi"
    dbname = "goiardi"
    host = "/tmp"
    sslmode = "disable"