--- 
:benchmark: false
install: --no-user-install
:backtrace: true
:update_sources: true
format_executable: true
:verbose: true
update: --no-user-install
:bulk_threshold: 1000
:sources: 
- http://rubygems.org
<% if @proxy && !@proxy.empty? -%>
gem: --no-ri --no-rdoc --bindir /usr/local/bin --http-proxy <%=@proxy%>
<% else -%>
gem: --no-ri --no-rdoc --bindir /usr/local/bin
<% end -%>